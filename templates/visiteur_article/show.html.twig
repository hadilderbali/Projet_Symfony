

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nom_auteur</th>
                <td>{{ article.nomAuteur }}</td>
            </tr>
        </tbody>
    </table>
    <div>
    <a href="{{ path('app_visiteur_commentaire_new', {'id': article.id }) }}">Ajouter un commentaire</a>
    </div>

        <div>
        {% for commentaire in commentaire %}
        <div> {{ commentaire.content }}</div>

        {% endfor %}
    </div>
{% endblock %}
