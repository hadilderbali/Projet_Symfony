
{% block title %}Donation index{% endblock %}

{% block body %}
    <h1>Donation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Valeur</th>
                <th>Cin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.id }}</td>
                <td>{{ donation.nom }}</td>
                <td>{{ donation.valeur }}</td>
                <td>{{ donation.cin }}</td>
                <td>
                    <a href="{{ path('app_visiteur_donation_show', {'id': donation.id}) }}">show</a>
                    <a href="{{ path('app_visiteur_donation_edit', {'id': donation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_visiteur_donation_new') }}">Create new</a>
{% endblock %}
